{
  "name": "mealplanner",
  "version": "1.0.0",
  "description": "Personalized meal planner application with Azure backend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "dev": "npm run dev --workspace=packages/frontend",
    "deploy:infra": "cd infrastructure && az deployment group create --resource-group rg-mealplanner --template-file main.bicep",
    "deploy:backend": "npm run deploy --workspace=packages/backend",
    "deploy": "npm run deploy:infra && npm run deploy:backend",
    "clean": "npm run clean --workspaces",
    "postinstall": "npm run build --workspace=packages/shared"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jagiraud/mealplanner.git"
  },
  "author": "Meal Planner Team",
  "license": "MIT"
}
