{
  "name": "@mealplanner/backend",
  "version": "1.0.0",
  "description": "Azure Functions backend for the meal planner application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:production": "npm run clean && tsc --project tsconfig.prod.json",
    "start": "func start",
    "dev": "tsc --watch & func start",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "deploy": "npm run build:production && func azure functionapp publish mealplanner-functions"
  },
  "dependencies": {
    "@azure/functions": "^4.5.0",
    "@azure/cosmos": "^4.0.0",
    "@mealplanner/shared": "1.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
